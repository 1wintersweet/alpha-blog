<h1> Editing an existing article </h1>

<!-- block for display validation messages -->
<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting saved... please re-enter.</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<% end %>

<!-- use rails  form for helpers-->
<%= form_for @article do |f| %>

<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_field :description %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>

<p>
  <%= link_to "Back to articles listing. ", articles_path %>
</p>